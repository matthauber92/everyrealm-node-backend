generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  username String
  password String
  orders   Order[]
}

model Burrito {
  id         String      @id @default(uuid())
  name       String
  size       BurritoSize
  price      Float
  orderItems OrderItem[]
}

model Order {
  id        String @id @default(uuid())
  totalCost Float
  user      User   @relation(fields: [userId], references: [id])
  userId    String

  orderItems OrderItem[]
}

model OrderItem {
  id        String  @id @default(uuid())
  quantity  Int
  burrito   Burrito @relation(fields: [burritoId], references: [id])
  burritoId String

  order   Order  @relation(fields: [orderId], references: [id])
  orderId String
}

enum BurritoSize {
  REGULAR
  XL
  LARGE
  MEDIUM
}
