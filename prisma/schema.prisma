generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Burrito {
  id         String      @id @default(uuid())
  name       String
  size       BurritoSize
  price      Float
  orderItems OrderItem[]
}

model Order {
  id        String @id @default(uuid())
  totalCost Float

  orderItems OrderItem[]
}

model OrderItem {
  id       String   @id @default(uuid())
  quantity Int
  options  String[]

  burrito   Burrito @relation(fields: [burritoId], references: [id])
  burritoId String

  order   Order  @relation(fields: [orderId], references: [id])
  orderId String
}

enum BurritoSize {
  REGULAR
  XL
  LARGE
  MEDIUM
}
